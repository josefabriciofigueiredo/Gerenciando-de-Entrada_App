<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_perfil_dialog"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_color="#888888"
            app:civ_border_width="0.5dp"
            tools:civ_circle_background_color="#252525" />

        <TextView
            android:id="@+id/txt_mudar_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_flip_camera"
            android:drawablePadding="5dp"
            android:drawableTint="#595959"
            android:fontFamily="sans-serif-medium"
            android:text="Mudar"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_nome_dialog"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_input"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:drawableTint="#4E4E4E"
            android:ems="10"
            android:hint="Nome"
            android:inputType="text"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_salvar_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_btn_entrar"
                android:text="Salvar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_fechar_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_btn_entrar"
                android:text="Fechar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>